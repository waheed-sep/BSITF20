<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".RelativeLayout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="World Flags"
        android:textAllCaps="true"
        android:textSize="50sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/pak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:src="@drawable/pakistan" />

    <ImageView
        android:id="@+id/canada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"

        android:layout_toRightOf="@id/pak"
        android:src="@drawable/canada" />

    <ImageView
        android:id="@+id/china"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pak"
        android:layout_marginTop="100dp"
        android:src="@drawable/china" />

    <ImageView
        android:id="@+id/afghanistan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pak"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@id/pak"
        android:src="@drawable/afghanistan" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:src="@drawable/baseline_home_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:src="@drawable/baseline_payments_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:src="@drawable/baseline_settings_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:src="@drawable/baseline_account_balance_wallet_24" />
    </LinearLayout>


</RelativeLayout>